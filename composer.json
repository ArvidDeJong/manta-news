{
    "name": "darvis/manta-news",
    "description": "News module for Manta CMS",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Darvis",
            "email": "info@arvid.nl"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Darvis\\MantaNews\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Darvis\\MantaNews\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php artisan package:discover --ansi"
        ],
        "post-install-cmd": [
            "@install-manta-news"
        ],
        "post-update-cmd": [
            "@install-manta-news"
        ],
        "install-manta-news": [
            "@php artisan manta-news:install --migrate --no-interaction"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Darvis\\MantaNews\\NewsServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "version": "1.0.0"
}
